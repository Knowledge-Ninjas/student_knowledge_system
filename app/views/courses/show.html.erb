<div class="container text-center">
  <p style="color: green"><%= notice %></p>

  <div class="flex-container" style="justify-content:space-evenly;">
    <button class="btn btn-outline-dark m-5"><%= link_to "Edit this course", edit_course_path(@course) %></button>
    <button class="btn btn-outline-dark m-5"><%= link_to "Back to courses", courses_path %></button>
    <%= button_to "Destroy this course", @course, method: :delete %>
  </div>
  <div class="row gx-5">
    <div class="col">
      <div class="row p-5">
        <div class="px-5 py-2 bg-light border rounded-3">
          <h2>**GET COURSE NAME**</h2>
        </div>
      </div>
      <div class="row ">
            <div class="px-5 py-2 bg-light border rounded-3">
              <div class="row">
                <h3>View Selection</h3>
              </div>
              <div class="row">
                <div class="col">
                  Order:
                  <select class="form-select" aria-label="sortOrder">
                    <option selected value="0">Alphabetical</option>
                    <option value="1">Reverse Alphabetical</option>
                    <option value="2">Chronological</option>
                    <option value="3">Reverse Chronological</option>
                  </select>
                </div>
                <div class="col">
                  Semester:
                  <select class="form-select" aria-label="sortOrder">
                    <option selected value="0">TODO - All Semesters</option>
                    <option value="1">Fall 2019</option>
                    <option value="2">Spring 2020</option>
                    <option value="3">...</option>
                  </select>
                </div>
                <div class="col">
                  Section:
                  <select class="form-select" aria-label="sortOrder">
                    <option selected value="0">TODO - All Sections</option>
                    <option value="1">000</option>
                    <option value="2">001</option>
                    <option value="3">...</option>
                  </select>
                </div>
                <div class="col">
                  Tags:
                  <select class="form-select" aria-label="sortOrder">
                    <option selected value="0">TODO - All Tags</option>
                    <option value="1">Tag 1</option>
                    <option value="2">Tag 2</option>
                    <option value="3">...</option>
                  </select>
                </div>
              </div>
            </div>
      </div>
      <div class="row p-5">
        <div class="px-5 py-2 bg-light border rounded-3">
          <h4>Current View Statistics:</h4>
            <p>Number of Students: TODO</p>
            <p> Average Memorization Score: TODO</p>
            <p> Highest Memorization: TODO - TODO</p>
            <p> Lowest Memorization: TODO - TODO</p>
        </div>
      </div>
    </div>
      
    <div class= "col">
      <div class="row">
        <table class="table table-striped table-hover text-center">
          <thead>
            <tr>
              <td colspan="4">
                <h3>Current View</h3>
              </td>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td>
                Pic
              </td>
              <td>
                Name
              </td>
              <td>
                Section - Semester
              </td>
              <td>
                Tags
              </td>
            </tr>
          </tbody>
      </div>
    </div>
  </div>


  <%= button_to "Destroy this course", @course, method: :delete %>
</div>


<h1>Students in this course:</h1>

<div id="students">
  <% @student_records.each do |student| %>
    <%= render student %>
    <p>
      <%= link_to "Show this student", student %>
    </p>
  <% end %>
</div>
