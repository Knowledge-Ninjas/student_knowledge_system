<div class= "flex flex-col">
    <div class = "flex flex-col">
        <h3 class="mx-4 px-5 py-2 text-center w-auto my-2 bg-white border border-2 border-dashed border-gray-300 rounded font-source-serif-pro font-light text-[1.5rem]">Students in Current View:</h3>
        <div class="overflow-x">
          <table class="h-screen overflow-y-scroll shadow-lg rounded-lg table-fixed mt-2 text-center mb-4">
            <thead> 
              <tr class="bg-slate-400 font-medium font-source-serif-pro">
                <th class="rounded-tl-lg px-8 py-2">Pic</th>
                <th class="border-l-[0.05rem] border-r-[0.05rem] px-8 py-2">Name</th>
                <th class="border-l-[0.05rem] border-r-[0.05rem] px-6 py-2">Semester - Section</th>
                <th class="rounded-tr-lg px-6 py-2">View Student Profile</th>
              </tr>
            </thead>
            <tbody>
              <% @student_records.each do |student| %>
                    <tr class="even:bg-gray-100 odd:bg-gray-200">
                        <td class="p-4">
                        <% if student.records[0].image.attached? %>
                            <%= image_tag student.records[0].image.variant(:thumb), class: 'rounded-full block mx-auto max-w-[4rem]' %>
                        <% else %>
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person rounded-circle" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                            </svg>
                        <% end %>

                        </td>
                      <td class="font-source-serif-pro font-light">
                        <%=student.records[0].lastname %>, <%=student.records[0].firstname %>
                      </td>
                      <td class="font-source-serif-pro font-light">
                        <%= student.semester_section.to_a.join(", ") %>
                      </td>
                      <td class="font-source-serif-pro font-bold">
                        <%= button_to "View profile", student.records[0], :method=>:get, class: "hover:underline hover:underline-offset-4"  %>
                      </td>
                    </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
</div>
