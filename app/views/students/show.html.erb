
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.1.4/tailwind.min.css">
</head>


<div class="bg-white py-8 flex flex-row mx-auto justify-center text-[#500000] w-3/4 drop-shadow-xl rounded my-4 bg-gray-100">
  <div class="flex justify-center items-center w-1/4">
    <div class="bg-blue-500 w-full h-full">
      
    </div>
  </div>
  <div class="blue">
    <h1><%= @student.firstname%> <%= @student.lastname%>'s Profile</h1>
    <div class="row">
      <div class="col">
        <div class="row">
        
        </div>
        <div class="row my-auto" id="<%= dom_id @student %>">
          <h3>Student Information</h3>
          <%# Removed render because info format isn't ideal %>
            <p>
              <strong>UIN:</strong>
              <%= @student.uin %>
            </p>

            <p>
              <strong>Email:</strong>
              <%= @student.email %>
            </p>

            <p>
              <strong>Classification:</strong>
              <%= @student.classification %>
            </p>

            <p>
              <strong>Major:</strong>
              <%= @student.major %>
            </p>
        </div>
      </div>

      <div class="col my-auto">
        <div class="row">
          <h3>Course History:</h3>
          <p><%=@course_history%></p>
        </div>
        <div class="row">
          <h3>Tags:</h3>
          <% if StudentsTag.where(student_id: @student.id).length == 0 %>
                  None
              <% else %>
                  <% tag_display_array = [] %>
                  <% StudentsTag.where(student_id: @student.id).each do |association| %>
                      <% tag_display_array.append(Tag.where(id: association.tag_id)[0].tag_name) %>
                  <% end %>
                  <p><%= tag_display_array.join(", ") %></p>
              <% end %>
        </div>
      </div>

      <div class="col my-auto">
        <div class="row">
          <h3>Notes:</h3>
          <p><%= @student.notes %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="hd footer mt-auto py-3 text-center">
  <div class="container">
    <div class="row gx-2">
      <div class="col">
        <div class="row p-2 pt-0">
          <%= button_to "Edit this student", edit_student_path(@student), :method => :get %>
        </div>
      </div>
      <div class="col">
        <div class="row p-2 pt-0">
          <%= button_to "Back to students", students_path, :method=>:get  %>
        </div>
      </div>
      <div class="col">
        <div class="row p-2 pt-0">
            <%= button_to "Delete this student", student_path(:id=>@student.id, :type => "all"), method: :delete %>
        </div>
      </div>
    </div>
  </div>
</footer>
